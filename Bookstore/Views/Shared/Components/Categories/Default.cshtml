@{
}

@model IEnumerable<string>

<div class="d-grid gap-1">
    <h6>Book Categories:</h6>

    <a class="btn btn-outline-secondary"
       asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1">All</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index"
           asp-route-bookCategory="@c"
           asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
    
</div>