@{
}

@model Book

<div class="card card-outline-primary">

    <div class="bg-light p-2">
        <div style="width:70%; float:left;">
            <h3>@Model.Title</h3>
            <h5>by @Model.Author</h5>
        </div>
        <div style="width:30%; height:100%; float:right;">
            <div style="width:100%; height:50%;" >
                <span class="badge bg-success" style="float:right; font-size:20px">
                    $@Model.Price
                </span>
            </div>

            <!--ADD TO CART button-->
            <div style="height:50%;">
                <form method="post" asp-page="/Shopping">

                    <input type="hidden" asp-for="@Model.BookId" />
                    <input type="hidden" asp-for="@Model.Price" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                    <span class="card-text">
                        <button type="submit" class="btn btn-sm" style="float:right; font-size:20px; font-weight:bold; color:hotpink">+ Add</button>
                    </span>
                </form>
            </div>
        </div>

    </div>


    <div>
        <div style="float:left; width:max-content;">
            <ul>
                <li>Category: @Model.Category</li>
                <li>Classification: @Model.Classification</li>
                <li>ISBN: @Model.Isbn</li>
                <li>Pages: @Model.PageCount</li>
                <li>Publisher: @Model.Publisher</li>
            </ul>
        </div>

        
    </div>
</div>   


